@*Task Modal*@


<div id="taskarea">
    <div class="row">
        <div class="col">
            <h1>@hunt.HuntName</h1>
        </div>
    </div>
    <p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="ManageTasks" asp-route-Id="@hunt.Id" class="btn btn-danger">Manage Tasks</a>

            <a asp-action="ViewPlayers" asp-route-Id="@hunt.Id" class="btn btn-danger">View Players</a>

